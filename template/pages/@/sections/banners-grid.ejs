<% if (Array.isArray(opt.banners) && opt.banners.length) { %>
  <% const colSize = Math.ceil(12 / opt.banners.length) %>
  <div class="banners-grid mb-3 mb-md-4 mb-lg-5">
    <% if (opt.banners.length > 1) { %>
      <div class="container">
        <div class="row">
          <% for (let i = 0; i < opt.banners.length; i++) { %>
            <div class="col-12 col-lg-<%= colSize %> mb-3 mb-lg-0<%- opt.width_mobile ? ' width-mobile' : '' %>">
              <%- await include('@/sections/inc/banner', { _, opt: opt.banners[i] }) %>
            </div>
          <% } %>
        </div>
      </div>
    <% } else { %>
      <div style="max-width: 160rem; text-align: center">
        <%- await include('@/sections/inc/banner', { _, opt: opt.banners[0] }) %>
      </div>
    <% } %>
  </div>
<% } %>
